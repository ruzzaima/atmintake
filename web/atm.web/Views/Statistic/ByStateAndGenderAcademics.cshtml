@using SevenH.MMCSB.Atm.Domain
@model SevenH.MMCSB.Atm.Web.Models.StatisticViewModel
@{
    ViewBag.Title = "Statistik mengikut negeri dan jantina dan pendidikan";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="row">
    <h5>Statistik Calon Mengikut Jantina, Negeri Kelahiran dan Pendidikan - Pengambilan Siri @Model.Acquisition.Siri @Model.Acquisition.AcquisitionType.AcquisitionTypeNm</h5>
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table class="table table-bordered tile">
            <thead>
                <tr>
                    <th>
                        Pendidikan
                    </th>
                    <th>
                        Negeri
                    </th>
                    <th class="center">
                        Lelaki
                    </th>
                    <th class="center">
                        Perempuan
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ap in @Model.ListOfHighEduLevel.OrderBy(a => a.HighestEduLevel))
                {
                    var byacademics = Model.ListOfApplicant.Where(a => a.BirthStateCd == ap.HighEduLevelCd);
                    var applicantSubmitteds = byacademics as IList<ApplicantSubmitted> ?? byacademics.ToList();
                    var lcount = applicantSubmitteds.Count(a => a.GenderCd == "L");
                    var pcount = applicantSubmitteds.Count(a => a.GenderCd == "P");
                    <tr>
                        <td style="text-align: left">@ap.HighEduLevelCd</td>
                        <td style="text-align: left">@ap.HighestEduLevel</td>
                        <td style="width: 80px">@lcount</td>
                        <td style="width: 80px">@pcount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3"></div>
</div>