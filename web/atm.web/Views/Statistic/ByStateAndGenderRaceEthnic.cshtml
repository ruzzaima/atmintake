@using SevenH.MMCSB.Atm.Domain
@model SevenH.MMCSB.Atm.Web.Models.StatisticViewModel
@{
    ViewBag.Title = "Statistik mengikut negeri dan jantina";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="row">
    <h5>Statistik Calon Mengikut Etnik,Bangsa,Jantina dan Negeri Kelahiran - Pengambilan Siri @Model.Acquisition.Siri @Model.Acquisition.AcquisitionType.AcquisitionTypeNm</h5>
    <h6>Bangsa : @Model.Race.RaceDescription</h6>
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table class="table table-bordered tile">
            <thead>
            <tr>
                <th rowspan="2">Etnik</th>
                <th colspan="2">
                    Semenanjung
                </th>
                <th colspan="2">
                    Sabah
                </th>
                <th colspan="2">
                    Sarawak
                </th>
                <th rowspan="2">
                    Jumlah
                </th>
            </tr>
            <tr>
                <th class="center">
                    Lelaki
                </th>
                <th class="center">
                    Perempuan
                </th>

                <th class="center">
                    Lelaki
                </th>
                <th class="center">
                    Perempuan
                </th>
                <th class="center">
                    Lelaki
                </th>
                <th class="center">
                    Perempuan
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var ap in @Model.ListOfEthnic.OrderBy(a => a.EthnicCd))
            {
                var byethnic = Model.ListOfApplicant.Where(a => a.EthnicCd == ap.EthnicCd);
                var applicantSubmitteds = byethnic as IList<ApplicantSubmitted> ?? byethnic.ToList();
                var semenanjunglcount = applicantSubmitteds.Count(a => a.GenderCd == "L" && !a.BirthStateName.ToLower().Contains("sabah") && !a.BirthStateName.ToLower().Contains("sarawak"));
                var semenanjungpcount = applicantSubmitteds.Count(a => a.GenderCd == "P" && !a.BirthStateName.ToLower().Contains("sabah") && !a.BirthStateName.ToLower().Contains("sarawak"));
                var sablcount = applicantSubmitteds.Count(a => a.GenderCd == "L" && a.BirthStateName.ToLower().Contains("sabah"));
                var sabpcount = applicantSubmitteds.Count(a => a.GenderCd == "P" && a.BirthStateName.ToLower().Contains("sabah"));
                var sarlcount = applicantSubmitteds.Count(a => a.GenderCd == "L" && a.BirthStateName.ToLower().Contains("sabah"));
                var sarpcount = applicantSubmitteds.Count(a => a.GenderCd == "P" && a.BirthStateName.ToLower().Contains("sabah"));
                <tr>
                    <td style="text-align: left">@ap.EthnicDescription</td>
                    <td style="width: 80px">@semenanjunglcount</td>
                    <td style="width: 80px">@semenanjungpcount</td>
                    <td style="width: 80px">@sablcount</td>
                    <td style="width: 80px">@sabpcount</td>
                    <td style="width: 80px">@sarlcount</td>
                    <td style="width: 80px">@sarpcount</td>
                    <td style="width: 80px">@byethnic.Count()</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-3"></div>
</div>