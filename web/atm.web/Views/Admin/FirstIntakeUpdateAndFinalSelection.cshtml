@using SevenH.MMCSB.Atm.Domain
@using SevenH.MMCSB.Atm.Domain.Interface
@model SevenH.MMCSB.Atm.Web.Models.AdminViewModel
@{
    ViewBag.Title = "Kemaskini Pemilihan Awal dan Membuat Pemilihan Akhir";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="tile">
        <h2 class="tile-title">Panggilan Pemilihan Awal @string.Format("{0}/{1} {2}", Model.Acquisition.Siri, Model.Acquisition.Year, Model.Acquisition.AcquisitionType.AcquisitionTypeNm)</h2>
        <div class="p-10">

            <div class="tab-container tile">
                <ul class="nav tab nav-tabs">
                    <li class="active"><a href="#home">Mesej</a></li>
                    <li><a href="#profile">Senarai Permohonan</a></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <textarea class="markdown-editor" name="content" rows="10"></textarea>
                    </div>
                    <div class="tab-pane" id="profile">
                        <table id="applicant_table" class="table table-bordered tile">
                            <thead>
                                <tr>
                                    <th class="col-md-1">Bil</th>
                                    <th>Nama</th>
                                    <th class="col-md-2">No Kad Pengenalan</th>
                                    <th class="col-md-2">Status Permohonan</th>
                                    <th class="col-md-2">
                                        <div><label> <input type="checkbox" id="selectall" /> Pilih Semua</label></div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var selectedid = @Model.Acquisition.AcquisitionId;
    </script>
    <script src="@Url.Content("~/Content/frontend/js/markdown.min.js")"></script> <!-- Markdown Editor -->
    <script src="@Url.Content("~/Scripts/Core/jquery.dataTables-1.9.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Core/jquery-dataTable-bootstrap-extender.js")"></script>
    <script src="@Url.Content("~/Scripts/Main/admin_firstintakeselection.js")"></script>
}

