@model SevenH.MMCSB.Atm.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Lupa Kata Laluan";
}

<div class="row">

    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-default tile">
            <div class="panel-heading">
                Lupa Kata Laluan
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post, new { @class = "p-10", role = "form", id = "forgotpassword_form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-12">
                        <label>No Kad Pengenalan</label>
                        @Html.TextBoxFor(m => m.IdNumber, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.IdNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        <label>Email/Email Alternatif <i>(yang didaftarkan)</i></label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12 m-t-10 m-b-10">
                        <input type="submit" class="btn btn-default input-sm m-b-10" value="Hantar" /><i style="padding-left: 5px;">
                            <p>Kata laluan akan diemelkan kepada anda. Selepas login anda perlu set semula kata laluan</p>
                        </i>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4"></div>
</div>
