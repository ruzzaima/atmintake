@model SevenH.MMCSB.Atm.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Laman Utama";
}
<div class="row">
    <div class="col-md-12">
        <!-- Image Carousel -->
        <div class="tile">
            <h2 class="tile-title">Angkatan Tentera Malaysia</h2>
            <div id="carousel-example-generic" class="carousel slide">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Url.Content("~/Images/Aset/asetatm1.png")" alt="ATM">
                    </div>
                    <div class="item">
                        <img src="@Url.Content("~/Images/Aset/asetatm2.png")" alt="ATM">
                    </div>
                    <div class="item">
                        <img src="@Url.Content("~/Images/Aset/asetatm3.png")" alt="ATM">
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <i class="icon">&#61903;</i>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <i class="icon">&#61815;</i>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_LeftMenu")
    </div>
    <div class="col-md-6">
        <div class="tile">
            <h2 class="tile-title">Iklan</h2>
            <div class="p-10">
                @foreach (var ad in @Model.ListOfAdvertisment)
                {
                    <div class="m-b-10">
                        @ad.Title
                        <br />
                        @ad.ShortDescription ... <a href="@Url.Action("Advertisment", "Home", new { id = ad.Id })">[Lagi]</a> 
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3">
        @Html.Partial("_LoginPartial", @Model.LoginModel)
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}